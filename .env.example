# All variables are prefixed with NEOTEX_ when read by the application
# godotenv loads this file automatically - no 'export' needed

NEOTEX_DATABASE_URL=postgres://neotex:neotex@localhost:5434/neotex?sslmode=disable
NEOTEX_PORT=8080

# S3/RustFS (optional - asset service disabled if not set)
NEOTEX_S3_ENDPOINT=http://localhost:9000
NEOTEX_S3_ACCESS_KEY_ID=rustfsadmin
NEOTEX_S3_SECRET_ACCESS_KEY=rustfsadmin
NEOTEX_S3_BUCKET=neotex-assets

# OpenAI (optional - context/search disabled if not set)
NEOTEX_OPENAI_API_KEY=sk-your-api-key-here
